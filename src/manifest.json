{
  "manifest_version": 2,
  "name": "MTG Card",
  "version": "1.000",
 
  "description": "Allows to store mtg card names in memory and insert them therever you like, helping with trade or deckbuilding",
  "icons": {
    "24": "icons/icon24.png"
  },

  "background": {
    "scripts": [
        "background.bundle.js"
    ]
  },
  
  "browser_action": {
    "default_title": "MTG Card Buffer",
    "default_popup": "html/popup.html"
  },

  "applications": {
    "gecko": {
      "id": "mtgcardbuffer@mozilla.org",
      "strict_min_version": "45.0"
    }
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "clipboardRead"
  ]
}